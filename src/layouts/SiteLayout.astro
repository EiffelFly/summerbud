---
import HeadSeo from "./HeadSeo.astro";
import { Props as HeadSeoProps } from "./HeadSeo.astro";
import { FeatureImage, Footer, NavBar, TableOfContent } from "@/components/index";
import cn from "clsx";
import { FeatureImg, Heading, Nullable } from "@/types/general";

export interface Props extends HeadSeoProps {
  headings: Nullable<Heading[]>;
  featureImg: Nullable<FeatureImg>;
}

const props = Astro.props as Props;
---

<html class="dark">
  <head>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta charset="utf-8" />
    <link href="/prism-atom-dark.css" rel="stylesheet" />
    <HeadSeo
      meta={props.meta}
      canonicalURL={props.canonicalURL}
      text={props.text}
    />
    <script is:inline>
      // credit: https://github.com/withastro/docs/blob/main/src/layouts/MainLayout.astro
      const html = document.querySelector("html");
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      // The ThemeToggle icon will reset to initial state once we change page, we need to change
      // it back to correct one before page first paint

      if (theme === "light") {
        html.classList.remove("dark");
      } else {
        html.classList.add("dark");
      }
    </script>
  </head>
  <body>
    <div
      class={cn(
        "flex flex-col w-full min-h-screen px-4 sm:px-6 lg:px-10 xl:px-0 bg-sd-brwhite dark:bg-sd-brblack"
      )}
    >
      <div class={cn("flex flex-col h-full w-full flex-1")}>
        <NavBar marginBottom="mb-20" client:load />
        {props.featureImg ? 
          <FeatureImage
            width=""
            height="h-[400px] md:h-[600px]"
            src={props.featureImg.path}
            alt={props.featureImg.alt}
            source={props.featureImg.source}
            marginBottom="mb-20"
            position="mx-auto"
          />: 
          null}
        <div class="h-full flex flex-col xl:flex-row flex-1 mb-20">
          <div class="hidden xl:flex xl:w-2/12"></div>
          <div class={cn("flex flex-col w-full mx-auto max-w-4xl xl:max-w-5xl")}><slot /></div>
          <div class="hidden xl:block h-full xl:w-2/12 pr-5 sticky top-20">
            {props.headings ? <TableOfContent headings={props.headings} client:load /> : null}
          </div>
        </div>
        <Footer />
      </div>
    </div>
  </body>
</html>
