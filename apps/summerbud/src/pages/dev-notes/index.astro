---
import MainLayout from "../../layouts/main.astro";
import { getCollection } from "astro:content";
import { ByYearPostList } from "../../components";
import { getByYearPosts } from "../../utils";
import type { SEO } from "../../type";
import { SITE } from "../../site-config";

const devNotePosts = await getCollection("dev-notes");
const byYearPosts = getByYearPosts(devNotePosts);

const pageMeta: SEO = {
	title: "dev-notes",
	locale: "zh-TW",
	description: "This is Summerbud's dev-notes archive",
	image: null,
	publishedAt: "",
	tags: "archive",
	canonicalURL: `${SITE.domain}/dev-notes`,
	text: "This is Summerbud's dev-notes archive",
};
---

<MainLayout {...pageMeta}>
	<ByYearPostList byYearPosts={byYearPosts} />
</MainLayout>
