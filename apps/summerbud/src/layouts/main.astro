---
import { SummerbudLogo } from "../components";
import { Footer } from "../components/Footer";
import { Link } from "../components/Link";
const props = Astro.props as Props;

export type Props = {
	title: string;
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{props.title}</title>
	</head>
	<body>
		<div class="flex flex-col min-h-screen p-0 bg-black">
			<div class="w-full flex-1 max-w-[800px] mx-auto">
				<slot />
			</div>
			<div class="flex flex-col p-10 border-t border-gray-800">
				<Footer />
			</div>
			<div class="absolute top-10 left-10">
				<SummerbudLogo />
			</div>
			<div class="absolute flex top-10 right-10 h-10">
				<Link dest="/archive">archive</Link>
			</div>
		</div>
	</body>
</html>
