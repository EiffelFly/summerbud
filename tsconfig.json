{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/types/*": ["src/types/*"]
    },
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["astro/env"],
    "strict": true
  },
  "include": ["./src"]
}
